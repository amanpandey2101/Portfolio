---
import Nav from "@/components/nav.astro";
import Layout from "@/layouts/Layout.astro";
import favicon from "/favicons/main.ico";
import SplashCursor from "../../React/SplashCursor";
import ShinyText from "@/React/ShinyText";

import { Image } from "astro:assets";

import dashboard from "../../../public/projects/web/dashboard.jpg";

interface Project {
  title: string;
  image: ImageMetadata;
  link: string;
  preview: string;
  status: string;
  technologies: string[];
  description: string;
  date: string;
}

const projects: Project[] = [
  {
    title: "HAKS - Indian Army BraveHearts admin Dashboard",
    image: dashboard as ImageMetadata,
    link: "#",
    preview: "#",
    status: "Private",
    technologies: [
      "MERN Stack",
      "React Native",
      "MongoDB",
      "Express",
      "Node.js",
    ],
    description:
      "Mobile application honoring Indian Army personnel with recognition and memorial features. Private repository due to sensitive nature.",
    date: "2023",
  },
];
---

<Nav />
<Layout title="Aman Kumar Pandey | Projects" favicon={favicon}>
  <div class="relative w-full min-h-screen bg-[#101010]">
    <div class="absolute inset-0 z-10">
      <SplashCursor client:load />
    </div>
    <section
      class="relative z-20 w-full min-h-screen flex items-center justify-center text-[var(--white)] my-12 md:mt-0"
      id="home"
    >
      <div class="max-w-5xl mx-auto lg:my-36 md:my-0">
        <a href="/projects">
          <h2 class="text-lg text-[var(--sec)] mb-2 shiny-sec">Projects</h2>
        </a>
        <h3 class="text-4xl md:text-5xl font-medium mb-8">
          <ShinyText text="Web 2.0" />
        </h3>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          {
            projects.map((project) => (
              <div class="group rounded-2xl p-3 border border-[var(--white-icon-tr)] hover:bg-opacity-80 transition-all duration-300">
                <div class="mb-4">
                  <div class="flex flex-col items-center justify-between mb-3">
                    <a
                      href={project.preview}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="block"
                    >
                      <div class="rounded-2xl overflow-hidden shadow-lg hover:shadow-xl transition-shadow duration-300 mb-4">
                        <Image
                          src={project.image}
                          alt={project.title}
                          class="w-full h-48 md:h-72 object-cover group-hover:scale-105 transition-transform duration-300"
                        />
                      </div>
                      <div class="flex items-center px-3 mb-2">
                        <div class="flex-grow">
                          <h4 class="text-lg font-semibold">{project.title}</h4>
                          <span class="py-1 text-sm text-[var(--white-icon)] ">
                            {project.status}
                          </span>
                        </div>
                        <div class="flex gap-2 ml-auto">
                          <a
                            target="_blank"
                            href={project.link}
                            aria-label="GitHub"
                            class="size-14 flex justify-center items-center text-[var(--white-icon)] hover:text-white transition duration-300 ease-in-out border border-1 border-[var(--white-icon-tr)] p-3 rounded-xl bg-[#1414149c] hover:bg-[var(--white-icon-tr)]"
                          >
                            <svg
                              xmlns="http://www.w3.org/2000/svg"
                              viewBox="0 0 24 24"
                              fill="currentColor"
                              class="size-7"
                            >
                              <path d="M24 12L18.3431 17.6569L16.9289 16.2426L21.1716 12L16.9289 7.75736L18.3431 6.34315L24 12ZM2.82843 12L7.07107 16.2426L5.65685 17.6569L0 12L5.65685 6.34315L7.07107 7.75736L2.82843 12ZM9.78845 21H7.66009L14.2116 3H16.3399L9.78845 21Z" />
                            </svg>
                          </a>
                          <a
                            target="_blank"
                            href={project.preview}
                            aria-label="Preview"
                            class="size-14 flex justify-center items-center text-[var(--white-icon)] hover:text-white transition duration-300 ease-in-out border border-1 border-[var(--white-icon-tr)] p-3 rounded-xl bg-[#1414149c] hover:bg-[var(--white-icon-tr)]"
                          >
                            <svg
                              xmlns="http://www.w3.org/2000/svg"
                              viewBox="0 0 24 24"
                              fill="currentColor"
                              class="size-7"
                            >
                              <path d="M16.0037 9.41421L7.39712 18.0208L5.98291 16.6066L14.5895 8H7.00373V6H18.0037V17H16.0037V9.41421Z" />
                            </svg>
                          </a>
                        </div>
                      </div>
                    </a>
                    {/* <p class="text-sm text-[var(--white-icon)] mb-4 leading-relaxed">
                      {project.description}
                    </p> */}
                    
                    <div class="flex flex-wrap gap-2 mb-4">
                      {project.technologies?.map((tech) => (
                        <span class="px-2 py-1 bg-[var(--sec)] bg-opacity-20 text-[var(--sec)] rounded-md text-xs text-white font-medium">
                          {tech}
                        </span>
                      ))}
                    </div>
                  </div>
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </section>
  </div>
</Layout>
